---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import constructionGif from '../assets/construction.gif';
---

<BaseLayout title="n0rdp0l ~ $whoami">
  <div class="header">
    <div class="whoami-path">~/n0rdp0l</div>
  </div>

  <div class="construction-banner">
    <Image src={constructionGif} alt="Under Construction" width={600} format="gif" />
  </div>

  <div class="terminal-body">
    <div class="code-block">
      <div class="code-line">
        <span class="prompt">$</span> <span class="command">whoami</span>
      </div>
      <div class="output">n0rdp0l</div>
    </div>

    <div class="intro-text">
      <p>Hey, I'm Felix :) Welcome to my website! </p>
      <p>My formal  background is in Econometrics, Statistics & Data Science</p>
    </div>

    <div class="code-block">
      <div class="code-line">
        <span class="prompt">$</span> <span class="command">ls -1a interests/</span>
      </div>
      <div class="file-list">
        <div class="file-item">.privacy_and_security</div>
        <div class="file-item">decentralised-networks</div>
        <div class="file-item">selfhosting</div>
        <div class="file-item">arch-linux</div>
        <div class="file-item">hyprland</div>
      </div>
      <div class="terminal-line">
        <span class="prompt">$</span><span class="cursor">_</span>
      </div>
    </div>
  </div>

  <div class="nav">
    <div class="nav-item">
      <a href="/blog/">
        <img src="/gifs/sn_read.gif" alt="Blog" />
        <span transition:name="blog-title">Blog</span>
      </a>
    </div>
    <div class="nav-item">
      <a href="/cv/">
        <img src="/gifs/diplom001.gif" alt="CV" />
        <span transition:name="cv-title">Curriculum Vitae</span>
      </a>
    </div>
    <div class="nav-item">
      <a href="/about/">
        <img src="/gifs/indexMenuMail.gif" alt="Contact" />
        <span transition:name="contact-title">Contact</span>
      </a>
    </div>
  </div>

  <Footer />
</BaseLayout>

<style>
  .whoami-path {
    font-family: 'JetBrains Mono', var(--font-mono);
    font-size: clamp(1.5rem, 4vw, 2rem);
    color: var(--gold);
    padding: 1rem;
    text-align: center;
  }

  .construction-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 0.75rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: bold;
    color: var(--white);
    border-bottom: var(--border);
  }

  .construction-banner img {
    max-width: 100%;
    height: auto;
  }

  .terminal-body {
    padding: 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.95rem;
    line-height: 1.8;
  }

  .code-block {
    background: var(--code-bg);
    border: var(--border);
    padding: 1rem;
    margin: 1rem 0;
    font-family: 'JetBrains Mono', var(--font-mono);
  }

  .code-line {
    color: var(--text-main);
  }

  .code-line .prompt {
    color: var(--purple-text);
    font-weight: bold;
  }

  [data-theme="dark"] .code-line .prompt {
    color: var(--gold);
  }

  .code-line .command {
    color: var(--text-main);
    margin-left: 0.5rem;
  }

  .output {
    color: var(--text-main);
    margin: 0.5rem 0;
  }

  .terminal-line {
    margin-top: 0.5rem;
  }

  .terminal-line .prompt {
    color: var(--purple-text);
    font-weight: bold;
  }

  [data-theme="dark"] .terminal-line .prompt {
    color: var(--gold);
  }

  .cursor {
    display: inline-block;
    width: 10px;
    height: 1em;
    background: var(--text-main);
    margin-left: 2px;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }

  .intro-text {
    margin: 1.5rem 0;
    font-family: var(--font-plex);
  }

  .intro-text p {
    margin: 0.5rem 0;
    color: var(--text-main);
  }

  .label {
    color: var(--purple-text);
    font-weight: bold;
  }

  [data-theme="dark"] .label {
    color: var(--gold);
  }

  .file-list {
    margin-top: 0.5rem;
  }

  .file-item {
    color: var(--text-main);
    margin: 0.25rem 0;
  }

  .nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 1.5rem;
    background-color: var(--nav-bg);
    border-top: var(--border);
    border-bottom: var(--border);
    transition: background-color 0.3s, border-color 0.3s;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-item a {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--text-main);
    font-family: var(--font-mono);
    font-size: 0.85rem;
    transition: color 0.3s;
  }

  .nav-item a:hover {
    color: var(--purple-text);
  }

  [data-theme="dark"] .nav-item a:hover {
    color: var(--gold);
  }

  .nav-item img {
    width: 50px;
    height: auto;
  }

  @media (max-width: 800px) {
    .whoami-path {
      font-size: clamp(1.2rem, 5vw, 1.5rem);
      padding: 0.75rem;
    }

    .terminal-body {
      padding: 1rem;
      font-size: 0.85rem;
    }

    .code-block {
      padding: 0.75rem;
      font-size: 0.8rem;
    }

    .nav {
      padding: 1rem;
      gap: 0.5rem;
    }

    .nav-item img {
      width: 40px;
    }

    .nav-item a {
      font-size: 0.75rem;
    }
  }
</style>
